
kernel void meshBoltzmannUpdate2D(const int Ntotal,
				  const dfloat dt,	
				  const dfloat rka,
				  const dfloat rkb,
				  const dfloat * restrict rhsq,
				  dfloat * restrict resq,
				  dfloat * restrict q){
				  
  // Low storage Runge Kutta time step update
  for(int n=0;n<Ntotal;++n;tile(256)){
    if(n<Ntotal){
      dfloat resqn = resq[n];
      resqn = rka*resqn + dt*rhsq[n];
      resq[n] = resqn;
      q[n] += rkb*resqn;
    }
  }
}

