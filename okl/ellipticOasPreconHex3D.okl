     
#define cubeThreadsP \
  for(int k=0;k<p_NqP;++k;@inner(2)) \
    for(int j=0;j<p_NqP;++j;@inner(1)) \
      for(int i=0;i<p_NqP;++i;@inner(0)) 

#if 0
// q  \in  Nq x Nq x Nq x Nelements
// Pq \in  NqPx NqPx NqPx Nelements

