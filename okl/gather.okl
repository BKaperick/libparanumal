
kernel void gather(const dlong Ngather,
		   const dlong * restrict gatherStarts,
		   const dlong * restrict gatherIds,
		   const dfloat * restrict q,
		   dfloat * restrict gatherq){

  for(dlong g=0;g<Ngather;++g;tile(256)){

    if(g<Ngather){
      const dlong start = gatherStarts[g];
      const dlong end = gatherStarts[g+1];
      dfloat gq = 0.f;

      for(dlong n=start;n<end;++n){
      	const dlong id = gatherIds[n];
      	gq += q[id];
      }

      gatherq[g] = gq;
    }
  }
}

