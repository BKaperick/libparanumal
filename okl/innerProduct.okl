#define B 256

kernel void innerProduct(const iint N,
			 const dfloat * restrict w,
			 const dfloat * restrict x,
			 dfloat * restrict wx){
  

  for(iint b=0;b<(N+B-1)/B;++b;outer0){
    
    volatile shared dfloat s_wx[B];

    for(iint t=0;t<B;++t;inner0){
      const iint id = t + b*B;
      s_wx[t] = (id<N) ? (w[id]*x[id]) : 0.f;
    }

    barrier(localMemFence);

    for(iint t=0;t<B;++t;inner0) if(t<128) s_wx[t] += s_wx[t+128];
    barrier(localMemFence);

    for(iint t=0;t<B;++t;inner0) if(t< 64) s_wx[t] += s_wx[t+ 64];
    barrier(localMemFence);

    for(iint t=0;t<B;++t;inner0) if(t< 32) s_wx[t] += s_wx[t+ 32];
    barrier(localMemFence);

    for(iint t=0;t<B;++t;inner0) if(t< 16) s_wx[t] += s_wx[t+ 16];
    barrier(localMemFence);

    for(iint t=0;t<B;++t;inner0) if(t<  8) s_wx[t] += s_wx[t+  8];
    barrier(localMemFence);

    for(iint t=0;t<B;++t;inner0) if(t<  4) s_wx[t] += s_wx[t+  4];
    barrier(localMemFence);

    for(iint t=0;t<B;++t;inner0) if(t<  2) s_wx[t] += s_wx[t+  2];
    barrier(localMemFence);

    for(iint t=0;t<B;++t;inner0) if(t<  1) wx[b] = s_wx[0] + s_wx[1];
  }
}

